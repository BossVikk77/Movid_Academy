<div class="container my-5">
  <h1 class="display-4 text-primary fw-bold mb-4 text-center"><i class="bi bi-envelope-fill me-3"></i>Get In Touch</h1>
  <p class="lead text-center mb-5">We're here to help. Send us a message, and we'll get back to you within one business day.</p>

  <div class="row">
    <div class="col-lg-7 mb-4 mb-lg-0">
      <h2 class="text-primary fw-bold mb-3">Send Us a Message</h2>

<form class="needs-validation" action="https://formspree.io/f/mqagkgjw" method="POST" novalidate>
        
        <div class="mb-3">
          <label for="contactName" class="form-label">Full Name</label>
          <input type="text" class="form-control" id="contactName" name="name" required>
          <div class="invalid-feedback">
            Please enter your name.
          </div>
        </div>

        <div class="mb-3">
          <label for="contactEmail" class="form-label">Email Address</label>
          <input type="email" class="form-control" id="contactEmail" name="email" required>
          <div class="invalid-feedback">
            Please enter a valid email address.
          </div>
        </div>
        
        <div class="mb-3">
          <label for="contactSubject" class="form-label">Subject</label>
          <input type="text" class="form-control" id="contactSubject" name="subject" required>
           <div class="invalid-feedback">
            Please enter a subject.
          </div>
        </div>

        <div class="mb-3">
          <label for="contactMessage" class="form-label">Message</label>
          <textarea class="form-control" id="contactMessage" name="message" rows="5" required></textarea>
          <div class="invalid-feedback">
            Please enter your message.
          </div>
        </div>
        
        <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
      </form>      

    </div>

    <div class="col-lg-5">
      <h2 class="text-primary fw-bold mb-3">Contact Information</h2>
      <p><strong>Address:</strong><br>123 Education Lane<br>Lagos, Nigeria</p>
      <p><strong>Email:</strong><br><a href="mailto:info@movid.academy">info@movid.academy</a></p>
      <p><strong>Phone:</strong><br><a href="tel:+1234567890">+1 (234) 567-890</a></p>
      <p><strong>Hours:</strong><br>Monday - Friday: 9:00 AM - 6:00 PM<br>Saturday: 10:00 AM - 4:00 PM</p>

      <div class="ratio ratio-16x9 mt-4">
        <iframe 
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d15856.55198083815!2d3.3850025!3d6.5061619!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x103b8c5f911a3e3b%3A0x67341d3b5cf137b3!2sLagos!5e0!3m2!1sen!2sng!4v1678888888888!5m2!1sen!2sng" 
          width="600" 
          height="450" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy" 
          referrerpolicy="no-referrer-when-downgrade"
          title="Google Maps Location">
        </iframe>
      </div>
    </div>
  </div>
</div>

<script>
(() => {
  'use strict'
  const forms = document.querySelectorAll('.needs-validation')
  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault()
        event.stopPropagation()
      }
      form.classList.add('was-validated')
    }, false)
  })
})()
</script>